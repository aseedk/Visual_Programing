<Window x:Class="Class_Sessional_2.Question2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Class_Sessional_2"
        mc:Ignorable="d"
        Title="Question2" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Name="ListBox" Grid.Row="0"></ListBox>
        <ProgressBar Grid.Row="1" x:Name="progressbar" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="50"/>
        <Grid Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column ="1" Content="Start" Name="btnStart" Click="BtnStart_Click"></Button>
            <Label Grid.Column="0" x:Name="lblCounter" Content="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
