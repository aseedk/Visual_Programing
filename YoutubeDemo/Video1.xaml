<Window x:Class="YoutubeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Content="Name" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100" Height="50" FontSize="16"></Label>
        <TextBox Grid.Column = "1" Name= "Name" Text="Enter Name" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="50"></TextBox>
        <Button Grid.Column="2" Content="Button" VerticalAlignment="Center" HorizontalAlignment="Left" Width="100" Height="50" Click="ButtonBase_OnClick"></Button>
    </Grid>
</Window>
